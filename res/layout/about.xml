<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
  <LinearLayout style="@style/ActionBarTitleContainer">
        <ImageButton style="@style/ActionBarTitle"
            android:contentDescription="@string/menu_home" android:src="@drawable/home_btn"
            android:onClick="onClickHome" />

        <ImageView style="@style/ActionBarTitleSeparator" />
        <TextView style="@style/ActionBarTitleText" />
        <ImageView style="@style/ActionBarTitleSeparator" />
        <ImageButton style="@style/ActionBarTitle"
            android:id="@+id/search_report_btn"
            android:src="@drawable/title_search"
            android:onClick="onRefreshReports" />
            
    </LinearLayout>
    <ImageView style="@style/ActionBarSeparator" />
  <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:padding="25px"
    android:scrollbars="none">
    <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@drawable/background_color"
      android:gravity="center"
      android:paddingRight="15px">

      <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ushahidi_android_logo" />

      <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/date_color"
        android:textStyle="bold"
        android:text="@string/version" />
      <TextView
        android:id="@+id/spacer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

      <TextView
        android:id="@+id/spacer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
      <TextView
        android:id="@+id/welcome_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@drawable/date_color"
        android:textStyle="bold"
        android:layout_below="@id/title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0px"
        android:text="@string/welcome_mgs" />

      <TextView
        android:id="@+id/spacer2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

      <Button
        android:id="@+id/view_website"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0px"
        android:textStyle="bold"
        android:text="@string/ushahidi_url" />

    </LinearLayout>
  </ScrollView>
</LinearLayout>