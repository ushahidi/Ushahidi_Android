<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color" >

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/relativeLayout1"
        android:layout_marginBottom="20dp"
        android:fadeScrollbars="true"
        android:gravity="center"
        android:padding="25dp"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="15dp"
            android:paddingBottom="15dp" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/logo_icon" />

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/date_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/spacer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/about_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0px"
                android:text="@string/about_text"
                android:textColor="@color/date_color"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sky_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/about_background" />

        <LinearLayout
            android:id="@+id/bottom_menu_bar_separator"
            android:baselineAligned="false"
            style="@style/BottomActionBarContainer" >

          

                <Button
                    android:id="@+id/team_link"
                    style="@style/BottomActionbarButton"
                    android:drawableTop="@drawable/button_team"
                    android:text="@string/team" />

                <Button
                    android:id="@+id/media_link"
                    style="@style/BottomActionbarButton"
                    android:drawableTop="@drawable/button_media"
                    android:text="@string/media" />

                <Button
                    android:id="@+id/twitter_link"
                    style="@style/BottomActionbarButton"
                    android:drawableTop="@drawable/button_twitter"
                    android:text="@string/twitter" />

                <Button
                    android:id="@+id/facebook_link"
                    style="@style/BottomActionbarButton"
                    android:drawableTop="@drawable/button_facebook"
                    android:text="@string/facebook" />

                <Button
                    android:id="@+id/contact_link"
                    style="@style/BottomActionbarButton"
                    android:drawableTop="@drawable/button_contact"
                    android:text="@string/contact" />
            
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>